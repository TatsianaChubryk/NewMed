<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.NewMed.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.NewMed.AppWidgetContainer">

    <TextView
        android:id="@+id/numberCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="+375(29)64-77-142"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nameCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberCall"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-81dp"
        android:gravity="center"
        android:text="Алексей"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/numberCall"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="0dp"
        android:text="Калиновского 75 кв 46"
        android:textAlignment="center"
        android:textSize="20sp" />
</RelativeLayout>