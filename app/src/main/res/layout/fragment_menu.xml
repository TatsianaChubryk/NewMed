<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".presentation.fragments.MenuFragment">

    <LinearLayout
        android:id="@+id/container4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/style_menu"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAddPatient"
                android:layout_width="190dp"
                android:layout_height="165dp"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:background="@drawable/style_menu"
                android:scaleType="centerCrop"
                android:src="@drawable/new_patient"
                android:elevation="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAllPatients"
                android:layout_width="190dp"
                android:layout_height="165dp"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:background="@drawable/style_menu"
                android:scaleType="centerCrop"
                android:src="@drawable/all_patient" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMoney"
                android:layout_width="190dp"
                android:layout_height="165dp"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:background="@drawable/style_menu"
                android:scaleType="centerCrop"
                android:src="@drawable/money" />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>