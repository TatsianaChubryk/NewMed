<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MenuFragment"
    android:background="@color/color_background">

    <ImageView
        android:id="@+id/animView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_menu"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgAddPatient"
                    android:layout_width="145dp"
                    android:layout_height="165dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_menu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/new_patient"/>

                <ImageView
                    android:id="@+id/imgAllPatients"
                    android:layout_width="145dp"
                    android:layout_height="165dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_menu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/all_patient" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="145dp"
                    android:layout_height="165dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_menu"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/imgMoney"
                    android:layout_width="145dp"
                    android:layout_height="165dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_menu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/money" />


            </LinearLayout>

            <!--<LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSchedule"
                    android:layout_width="145dp"
                    android:layout_height="165dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_menu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/zabava" />

                <ImageView
                    android:id="@+id/imgMaps"
                    android:layout_width="145dp"
                    android:layout_height="165dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_menu"
                    android:scaleType="centerCrop"
                    android:src="@drawable/maps" />
            </LinearLayout>-->

        </LinearLayout>
    </ScrollView>

</FrameLayout>